{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": ["./*"],
      "@styles/*": ["./styles/*"],
      "@components/*": ["./components/*"],
      "@states/*": ["./redux/states/*"],
      "@actions/*": ["./redux/actions/*"],
      "@testData/*": ["./testData/*"],
      "@utils/*": ["./utils/*"],
      "@hooks/*": ["./hooks/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app/(auth)/home.tsx"
  ]
}
